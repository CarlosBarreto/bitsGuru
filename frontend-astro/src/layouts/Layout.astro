---
// src/layouts/Layout.astro
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="El Oráculo del Gurú de Bits" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

        <!-- Fuentes de Google: Cinzel para títulos (evoca inscripciones) y Lato para cuerpo -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Lato:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--color-background: #2a2a2a; /* Piedra volcánica oscuro */
		--color-text: #e2e2e2; /* Arena clara */
		--color-heading: #e8b866; /* Oro o maíz */
		--color-accent: #5aa897; /* Jade o turquesa */
        --color-accent-hover: #7acbb7;

		--font-heading: 'Cinzel', serif;
		--font-body: 'Lato', sans-serif;
	}

	html {
		font-family: var(--font-body);
		background-color: var(--color-background);
        color: var(--color-text);
	}

    body {
        margin: 0;
        padding: 2rem;
    }

	h1, h2, h3, h4, h5, h6 {
		font-family: var(--font-heading);
        color: var(--color-heading);
        letter-spacing: 1px;
	}

    a {
        color: var(--color-accent);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    a:hover {
        color: var(--color-accent-hover);
    }

    /* Estilos para botones y elementos interactivos que pueden ser reutilizados */
    .cta-button {
        display: inline-block;
        background-color: var(--color-accent);
        color: var(--color-background);
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        font-family: var(--font-heading);
        transition: background-color 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .cta-button:hover {
        background-color: var(--color-accent-hover);
        color: var(--color-background);
    }

    /* Eliminamos los estilos morados que teníamos antes en las páginas */
    h1, .cta-button, a {
        color: initial;
        background-color: initial;
    }

    /* Re-aplicamos los colores de la nueva temática */
    h1, h2 {
        color: var(--color-heading);
    }
    a {
        color: var(--color-accent);
    }
    a:hover {
        color: var(--color-accent-hover);
    }
    .cta-button {
        background-color: var(--color-accent);
        color: #000;
    }
    .cta-button:hover {
        background-color: var(--color-accent-hover);
    }

</style>
