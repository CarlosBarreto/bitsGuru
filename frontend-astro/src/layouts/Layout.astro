---
// src/layouts/Layout.astro
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="El Oráculo del Gurú de Bits" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

        <!-- Fuentes de Google: Space Grotesk y Noto Sans para el diseño futurista -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?display=swap&family=Noto+Sans:wght@400;500;700;900&family=Space+Grotesk:wght@400;500;700" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
        <!-- Tailwind CSS -->
        <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--color-background: #2a2a2a; /* Piedra volcánica oscuro */
		--color-text: #e2e2e2; /* Arena clara */
		--color-heading: #e8b866; /* Oro o maíz */
		--color-accent: #5aa897; /* Jade o turquesa */
        --color-accent-hover: #7acbb7;

		--font-heading: 'Space Grotesk', sans-serif;
		--font-body: 'Noto Sans', sans-serif;

        /* Estilos del diseño futurista */
        --neon-glow: 0 0 5px #1349ec, 0 0 10px #1349ec, 0 0 20px #1349ec, 0 0 40px #1349ec, 0 0 80px #1349ec;
	}

	html {
		font-family: var(--font-body);
		background-color: #0c0a14;
	       color: #e2e8f0; /* gray-200 */
	}

	   body {
	       margin: 0;
	       padding: 0;
	       font-family: var(--font-body);
	   }

	   /* Estilos personalizados del diseño */
	   .card-glow {
	       box-shadow: 0 0 5px rgba(19, 73, 236, 0.5), 0 0 10px rgba(19, 73, 236, 0.5), 0 0 20px rgba(19, 73, 236, 0.5);
	       transition: box-shadow 0.3s ease-in-out, transform 0.3s ease-in-out;
	   }
	   .card-glow:hover {
	       transform: translateY(-10px);
	       box-shadow: var(--neon-glow);
	   }
	   .glitch {
	       animation: glitch 1s linear infinite;
	   }
	   @keyframes glitch {
	       2%, 64% {
	           transform: translate(2px, 0) skew(0deg);
	       }
	       4%, 60% {
	           transform: translate(-2px, 0) skew(0deg);
	       }
	       62% {
	           transform: translate(0, 0) skew(5deg);
	       }
	   }

	h1, h2, h3, h4, h5, h6 {
		font-family: var(--font-heading);
        color: var(--color-heading);
        letter-spacing: 1px;
	}

    a {
        color: var(--color-accent);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    a:hover {
        color: var(--color-accent-hover);
    }

    /* Estilos para botones y elementos interactivos que pueden ser reutilizados */
    .cta-button {
        display: inline-block;
        background-color: var(--color-accent);
        color: var(--color-background);
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        font-family: var(--font-heading);
        transition: background-color 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .cta-button:hover {
        background-color: var(--color-accent-hover);
        color: var(--color-background);
    }

    /* Eliminamos los estilos morados que teníamos antes en las páginas */
    h1, .cta-button, a {
        color: initial;
        background-color: initial;
    }

    /* Re-aplicamos los colores de la nueva temática */
    h1, h2 {
        color: var(--color-heading);
    }
    a {
        color: var(--color-accent);
    }
    a:hover {
        color: var(--color-accent-hover);
    }
    .cta-button {
        background-color: var(--color-accent);
        color: #000;
    }
    .cta-button:hover {
        background-color: var(--color-accent-hover);
    }

</style>
